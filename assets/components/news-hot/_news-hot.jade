-var slug = getRandomSlug()
-var count = getRandomInt(10, 3)

.container.hot-news
  .row
    .col-sm-3.col-md-3.col-lg-2
      a(href="#").hot-news__button.btn.btn-red.fluid Горячие новости

    .col-sm-9.col-md-9.col-lg-10
      .carousel.slide(data-ride='carousel' id="#{slug}")

        .carousel-inner(role='listbox')
          -for(var i = 0; i < count; i++)
            .item(class="#{i == 0 ? 'active' : ''}")
              .hot-news__render.pr
                a(href="#").hot-news__text.text-overflow.transform-middle #{getRandomText()}

        a.btn.hot-news__prev.no-outline(href='##{slug}', role='button', data-slide='prev')
          span.glyphicon.glyphicon-chevron-left(aria-hidden='true')

        a.btn.hot-news__next.no-outline(href='##{slug}', role='button', data-slide='next')
          span.glyphicon.glyphicon-chevron-right(aria-hidden='true')

