div(block="comment-meta").clearfix
  div(elem="avatar")
    img(src="img/img_sidebar_comment_avatar.jpg" alt="avatar" elem="avatar-img" width="50" height="50")

  ul(elem="list").lsn.pl0.mb0
    li(elem="item").dib
      span(elem="icon").icon-user
      a(href="#" elem="link") #{randomUser()}
    li(elem="item").dib
      span(elem="icon").icon-calendar
      a(href="#" elem="link") #{randomDate()}
    li(elem="item").dib
      span(elem="icon").icon-comment
      a(href="#" elem="link") #{randomInt(1300, 15)}
    li(elem="item").dib
      span(elem="icon").icon-bookmark
      a(href="#" elem="link") Новостей: #{randomInt(1300, 15)}

  include ../admin-edit/_admin-edit
